<html>
  <head>
    <title>Edit</title>
  </head>

  <body>
    <h1>Edit Instrument</h1>

    <form action="/instruments/<%= instrument.id%>" method="post">
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= instrument.name%>"
        required
      />
      <br /><br />

      <label for="category_id">Category:</label>
      <select name="category_id" id="category_id" required>
        <% categories.forEach(category => { %>
        <option value="<%= category.id%>" <%= instrument.category_id === category.id ? "selected" : ""%>><%= category.name%></option>
        <% }) %>
      </select>
      <br /><br />

      <label for="brand_id">Brand:</label>
      <select name="brand_id" id="brand_id" required>
        <% brands.forEach(brand => { %>
        <option value="<%= brand.id%>" <%= instrument.brand_id === brand.id ? "selected" : ""%>><%= brand.name%></option>
        <% }) %>
      </select>
      <br /><br />

      <label for="serial_number">Serial Number:</label>
      <input
        type="text"
        id="serial_number"
        name="serial_number"
        value="<%= instrument.serial_number%>"
      />
      <br /><br />

      <label for="condition">Condition:</label>
      <select name="condition" id="condition">
        <option value="new" <%= instrument.condition === "new" ? "selected" : ""%>>New</option>
        <option value="used" <%= instrument.condition === "used" ? "selected" : ""%>>Used</option>
        <option value="damaged" <%= instrument.condition === "damaged" ? "selected" : ""%>>Damaged</option>
      </select>
      <br /><br />

      <label for="quantity">Quantity:</label>
      <input
        type="number"
        id="quantity"
        name="quantity"
        min="0"
        value="<%= instrument.quantity%>"
        required
      />
      <br /><br />

      <label for="price">Price:</label>
      <input
        type="number"
        id="price"
        name="price"
        min="0"
        step="0.01"
        value="<%= instrument.price%>"
        required
      />
      <br /><br />

      <button type="submit">Submit</button>
    </form>

    <a href="/instruments">Back</a>
  </body>
</html>
